function updateAnnot(val, annot){
	console.log(val);
	console.log(annot);
	if (val.hasClass("active") && val[0].innerHTML != "Clear" && val[0].innerHTML != "All") {
		console.log("added " + val[0].innerHTML);
		annot.push(val[0].innerHTML);
	} else if (val[0].innerHTML == "All"){
		annot = annot_all;
		val.removeClass("active");
	} else if (val[0].innerHTML == "Clear"){	
		annot = [];
		val.removeClass("active");
	} else {
		var index = annot.indexOf(val[0].innerHTML);
		if (index > -1) {
			annot.splice(index, 1);
		}
	}
	// console.log(annot);
	return annot;
}
